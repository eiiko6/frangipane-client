{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:*"
        },
        {
          "url": "https://alatreon.org/chatapp/*"
        }
      ],
      "deny": []
    },
    {
      "identifier": "websocket:default",
      "allow": [
        {
          "url": "ws://127.0.0.1:*"
        },
        {
          "url": "wss://alatreon.org/chatapp/*"
        }
      ]
    },
    "websocket:default",
    "upload:default",
    "dialog:default"
  ]
}

